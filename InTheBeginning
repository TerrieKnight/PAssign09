package EPA5;
import java.io.DataInputStream;
import java.io.EOFException;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.RandomAccessFile;
import java.util.Arrays;
import java.util.List;

import EPA5.FixedLengthStringIO;

/**
* File: PAssign09.java  
* Class: CSCI 1301  
* Author: Tiffany Fadgen
* Created on: April 3, 2023  
* Last Modified: April 3, 2023  
* Description: Program read in a text file and adjust wages accordiingly  
*/

public class PAssign09 {
	private static RandomAccessFile emd;
	private final static int NAME_SIZE = 32;
	
	public static void main(String[] args) throws FileNotFoundException, IOException {
		try {
			emd = new RandomAccessFile("src/employeeData.dat", "rw");
			
			// read employee info 
			for(int i = 0; i <= 9; i++) {
				System.out.print(readAddress(i));
			}
		}
		catch(IOException ex) {
			System.out.print("Cannot open address book, Exiting\nError: " + ex);
			System.exit(1);
		}
		
	}
	
	public static List<Object> readAddress(long position) throws IOException {
		emd.seek(position);
		String name = FixedLengthStringIO.readFixedLengthString(NAME_SIZE, emd);
		double salary = emd.readDouble();
		double yos = emd.readDouble();
		return Arrays.asList(name, salary, yos);
	}
}


class Employee {
	private String Name;
	private double Salary; 
	private double yos; 
	
	public Employee() {
		
	}

	public String getName() {
		return Name;
	}
	public void setName(String name) {
		Name = name;
	}
	public double getSalary() {
		return Salary;
	}
	public void setSalary(double salary) {
		Salary = salary;
	}
	public double getYos() {
		return yos;
	}
	public void setYos(double yos) {
		this.yos = yos;
	}

	
	public Employee(String nName, double nSalary, double nYos) {
		setName(nName);
		setSalary(nSalary);
		setYos(nYos);
	}
}
